<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="/style.css">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">

                <h1>Margin calculator</h1>

                {% for message in app.flashes('info') %}
                    <div class="alert alert-info">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if not form.vars.valid %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="row">
                    {{ form_start(form) }}
                    <div class="col-12 col-md-2">

                            <div class="mb-3">
                                {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            {{ form_widget(form.buy, {'attr': {'class': 'btn btn-primary m-1'}}) }}
                            {{ form_widget(form.sell, {'attr': {'class': 'btn btn-primary m-1'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>

                <a class="btn btn-primary m-1" href="/get-total-margin">Get total margin</a>
            </div>
        {% endblock %}
    </body>
</html>
