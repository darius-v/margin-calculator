<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-error">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="container">
                <h1>Margin calculator</h1>

                <div class="row">
                    <div class="col-md-2">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    {{ form_row(form.buy, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.sell, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>

                </div>


                <a href="/get-total-margin">Get total margin</a>
            </div>
        {% endblock %}
    </body>
</html>
